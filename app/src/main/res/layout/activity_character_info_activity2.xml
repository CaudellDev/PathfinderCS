                                    <TextView
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="+0"
                                        android:textSize="18sp"
                                        android:id="@+id/textView11" />
                                </LinearLayout>

                                <LinearLayout
