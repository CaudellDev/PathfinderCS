                                android:layout_height="wrap_content"
                                android:src="@android:drawable/divider_horizontal_bright"
                                android:scaleType="fitXY"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"/>
