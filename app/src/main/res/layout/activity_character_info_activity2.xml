                                        android:textSize="18sp"
                                        android:id="@+id/textView14" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center" >

