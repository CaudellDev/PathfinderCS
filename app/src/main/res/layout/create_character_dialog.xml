<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/TAN"
    style="@style/DialogTheme">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Character"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#795548"
        android:padding="10dp"
        android:layout_marginBottom="5dp"/>
    <TextView style="@style/DialogItemTitle"
        android:text="Name"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@android:drawable/divider_horizontal_bright"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/create_dialog_name"
        android:textSize="18sp"
        android:contentDescription="Name"
        android:longClickable="false" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView style="@style/DialogItemTitle"
                android:text="Race"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_spinner_race"
                android:layout_gravity="center"
                android:spinnerMode="dialog" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView style="@style/DialogItemTitle"
                android:text="Class"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_spinner_class"
                android:spinnerMode="dialog"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView style="@style/DialogItemTitle"
                android:text="Gender"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_spinner_gender"
                android:spinnerMode="dialog" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView style="@style/DialogItemTitle"
            android:text="Abilities"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/divider_horizontal_bright"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffd5fffa"
            android:baselineAligned="false">
            <LinearLayout style="@style/DialogLayouts">
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Str"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_str_title" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_str_val" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="+0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_str_mod" />
            </LinearLayout>

            <LinearLayout style="@style/DialogLayouts">
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Dex"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_dex_title" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_dex_val" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="+0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_dex_mod" />
            </LinearLayout>

            <LinearLayout style="@style/DialogLayouts">
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Con"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_con_title" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_con_val" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="+0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_con_mod" />
            </LinearLayout>

            <LinearLayout style="@style/DialogLayouts">
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Int "
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_int_title" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_int_val" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="+0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_int_mod" />
            </LinearLayout>

            <LinearLayout style="@style/DialogLayouts">
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Wis"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_wis_title" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_wis_val" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="+0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_wis_mod" />
            </LinearLayout>

            <LinearLayout style="@style/DialogLayouts">
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Cha"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_cha_title" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_cha_val" />
                <TextView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="+0"
                    android:textSize="18sp"
                    android:id="@+id/create_dialog_cha_mod" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_spinner_roll_method"
                android:spinnerMode="dialog">
            </Spinner>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate"
                android:id="@+id/create_dialog_ability_btn" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>